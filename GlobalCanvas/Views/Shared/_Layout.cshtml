<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <a href="@Url.Action("Index", "Home")">
                        <img width="50" src=@Url.Content("Images/designer.png") alt="logo"/>
                    </a>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        
        @Scripts.Render("~/scripts/jquery.signalR-1.0.0-alpha2.js")
        @Scripts.Render("~/signalr/hubs")

        @Scripts.Render("~/scripts/canvas.js")

        @Scripts.Render("~/scripts/underscore.js")
        @Scripts.Render("~/scripts/backbone.js")
        
        @Scripts.Render("~/scripts/canvas/canvasModel.js")
        @Scripts.Render("~/scripts/canvas/canvasView.js")


        @RenderSection("scripts", required: false)
    </body>
</html>
